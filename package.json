{
  "name": "mrsudo",
  "description": "...",
  "version": "1.0.0",
  "main": "app/app.js",
  "scripts": {
    "postinstall": "npm run clean -s",
    "test": "faucet",
    "clean": "rm -rf public/* && mkdir -p public/{css,js,images}",
    "lint:css": "stylelint src/stylesheets/**/*.scss; exit 0",
    "lint:js": "eslint src/**/*.js",
    "lint": "npm run lint:css; npm run lint:js",
    "build:vendor": "browserify -o public/js/vendor.js -r react -r react-dom -r react-router-dom",
    "build:js": "browserify src/main.jsx --extension=.jsx -x=react -x=react-dom -x=react-router -x=react-router-dom -o public/js/main.js",
    "build:css": "node-sass src/stylesheets/app.scss -o public/css/",
    "build:html": "cp -f src/index.html public/index.html",
    "build": "parallelshell 'npm run build:js -s' 'npm run build:css -s' 'npm run build:html'",
    "watch:js": "watchify src/main.jsx --extension=.jsx -o public/js/main.js -v",
    "watch:css": "node-sass -r --watch --source-map true --output public/css/ --output-style compressed src/stylesheets/",
    "watch": "parallelshell 'npm run watch:js -s' 'npm run watch:css -s'",
    "serve": "http-server -p 9090 public/",
    "livereload": "live-reload --port 9091 public/"
  },
  "dependencies": {
    "react": "^15.4.2",
    "react-dom": "^15.4.2"
  },
  "devDependencies": {
    "babel-preset-es2015": "^6.24.0",
    "babel-preset-react": "^6.23.0",
    "babelify": "^7.3.0",
    "browserify": "^14.1.0",
    "eslint": "^3.18.0",
    "eslint-plugin-react": "^6.10.3",
    "faucet": "0.0.1",
    "http-server": "^0.9.0",
    "live-reload": "^1.1.0",
    "node-sass": "^4.5.1",
    "parallelshell": "^2.0.0",
    "react-router": "^4.0.0",
    "react-router-dom": "^4.0.0",
    "stylelint": "^7.9.0",
    "stylelint-config-standard": "^16.0.0",
    "stylelint-scss": "^1.4.3",
    "tape": "^4.6.3",
    "watchify": "^3.9.0"
  },
  "eslintConfig": {
    "env": {
      "es6": true,
      "browser": true,
      "commonjs": true,
      "node": true
    },
    "parserOptions": {
      "sourceType": "module",
      "ecmaFeatures": {
        "jsx": true
      }
    }
  },
  "stylelint": {
    "extends": "stylelint-config-standard",
    "plugins": [
      "stylelint-scss"
    ],
    "rules": {
      "rule-empty-line-before": null,
      "selector-list-comma-newline-after": null,
      "declaration-empty-line-before": null
    }
  },
  "browserify": {
    "transform": [
      [
        "babelify",
        {
          "presets": ["es2015", "react"]
        }
      ]
    ]
  }
}
