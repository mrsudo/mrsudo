{
  "name": "mrsudo",
  "description": "...",
  "version": "1.0.0",
  "main": "app/app.js",
  "scripts": {
    "postinstall": "npm run clean",
    "test": "faucet",
    "clean": "rm -rf public/* && mkdir -p public/{css,js,images}",
    "build:js": "browserify src/main.js -o public/js/main.js",
    "build:css": "node-sass --include-path sass src/sass/app.scss -o public/css/",
    "build:html": "cp src/index.html public/index.html",
    "build": "parallelshell 'npm run build:js' 'npm run build:css' 'npm run build:html'",
    "watch:js": "watchify src/app/main.js -o public/app/main.js -v",
    "watch:css": "node-sass -r --watch --source-map true --output public/css/ --output-style compressed src/sass/",
    "watch:html": "watch 'npm run build:html' src/index.html",
    "watch": "parallelshell 'npm run watch:js' 'npm run watch:css' 'npm run watch:html'"
  },
  "dependencies": {
    "react": "^15.4.2",
    "react-dom": "^15.4.2"
  },
  "devDependencies": {
    "browserify": "^14.1.0",
    "faucet": "0.0.1",
    "node-sass": "^4.5.1",
    "parallelshell": "^2.0.0",
    "tape": "^4.6.3",
    "watchify": "^3.9.0"
  },
  "eslintConfig": {
    "env": {
      "es6": true,
      "browser": true,
      "commonjs": true,
      "node": true
    },
    "parserOptions": {
      "ecmaFeatures": {
        "jsx": true
      }
    }
  }
}
