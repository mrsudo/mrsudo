{
  "name": "mrsudo",
  "description": "...",
  "version": "1.0.0",
  "main": "src/main.jsx",
  "license": "Apache",
  "private": true,
  "repository": {
    "type": "git",
    "url": "https://github.com/mrsudo/mrsudo"
  },
  "scripts": {
    "postinstall": "npm run clean",
    "test": "faucet",
    "clean": "rm -rf public/* && mkdir -p public/{css,js,images}",
    "lint:css": "stylelint src/stylesheets/**/*.scss; exit 0",
    "lint:js": "eslint src/**/*.js",
    "lint": "npm-run-all lint:*",
    "build:js": "browserify src/main.jsx --extension=.jsx -o public/js/main.js",
    "build:css": "node-sass src/stylesheets/app.scss -o public/css/",
    "build:html": "cp -f src/static/index.html public/index.html",
    "build": "npm-run-all build:*",
    "watch:js": "watchify src/main.jsx --extension=.jsx -o public/js/main.js -v",
    "watch:css": "node-sass -r --watch --source-map true --output public/css/ --output-style compressed src/stylesheets/",
    "watch": "npm-run-all --parallel watch:*",
    "start": "browser-sync start -s public/ -f public/"
  },
  "dependencies": {
    "react": "^15.4.2",
    "react-dom": "^15.4.2",
    "react-router": "^4.0.0",
    "react-router-dom": "^4.0.0"
  },
  "devDependencies": {
    "babel-preset-es2015": "^6.24.0",
    "babel-preset-react": "^6.23.0",
    "babelify": "^7.3.0",
    "browser-sync": "^2.18.8",
    "browserify": "^14.1.0",
    "eslint": "^3.19.0",
    "eslint-plugin-react": "^6.10.3",
    "faucet": "0.0.1",
    "node-sass": "^4.5.2",
    "npm-run-all": "^4.0.2",
    "stylelint": "^7.10.1",
    "stylelint-config-standard": "^16.0.0",
    "stylelint-scss": "^1.4.3",
    "tape": "^4.6.3",
    "watchify": "^3.9.0"
  },
  "eslintConfig": {
    "env": {
      "es6": true,
      "browser": true,
      "commonjs": true,
      "node": true
    },
    "parserOptions": {
      "sourceType": "module",
      "ecmaFeatures": {
        "jsx": true
      }
    }
  },
  "stylelint": {
    "extends": "stylelint-config-standard",
    "plugins": [
      "stylelint-scss"
    ],
    "rules": {
      "rule-empty-line-before": null,
      "selector-list-comma-newline-after": null,
      "declaration-empty-line-before": null
    }
  },
  "browserify": {
    "transform": [
      [
        "babelify",
        {
          "presets": ["es2015", "react"]
        }
      ]
    ]
  }
}
